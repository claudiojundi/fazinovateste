<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fazinova.com.testefazinova.fragments.MoviesList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dp">

        <!--<ImageView-->
            <!--android:id="@+id/movieslist_img_thumb"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:src="@mipmap/ic_launcher" />-->

        <com.pkmmte.view.CircularImageView
            android:id="@+id/movieslist_img_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:border="true"
            app:border_color="#EEEEEE"
            app:border_width="0dp"
            app:shadow="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/movieslist_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/movieslist_txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#818182" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/movieslist_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededef"
        android:choiceMode="singleChoice" />
</LinearLayout>
